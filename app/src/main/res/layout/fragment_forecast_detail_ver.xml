<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="net.aung.sunshine.fragments.ForecastDetailFragment">

    <include
        android:id="@+id/vp_weather_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="@dimen/margin_medium"
        layout="@layout/view_pod_weather_info"
        />

    <include
        android:id="@+id/vp_weather_hpw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="@dimen/margin_xlarge"
        android:paddingRight="@dimen/margin_xlarge"
        android:paddingBottom="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_medium_2"
        layout="@layout/view_pod_weather_hpw_grid"
        />

</LinearLayout>
