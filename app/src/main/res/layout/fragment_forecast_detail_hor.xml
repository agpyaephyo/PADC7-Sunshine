<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="net.aung.sunshine.fragments.ForecastDetailFragment">

    <include
        android:id="@+id/vp_weather_info"
        layout="@layout/view_pod_weather_info"
        android:layout_width="@dimen/weather_detail_info_width"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_medium" />

    <include
        android:id="@+id/vp_weather_hpw"
        layout="@layout/view_pod_weather_hpw_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
