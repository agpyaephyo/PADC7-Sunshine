<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- auto-generated
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ForecastListTheme" parent="AppTheme">
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="ForecastDetailTheme" parent="AppTheme">
        <item name="toolbarStyle">@style/ToolbarDetail</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>

    <style name="ToolbarDetail" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light.DarkActionBar</item>
        <item name="displayOptions">homeAsUp</item>
    </style>

    <style name="DailyWeatherDay">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DailyWeatherDayWidget">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DailyWeatherStatus">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
